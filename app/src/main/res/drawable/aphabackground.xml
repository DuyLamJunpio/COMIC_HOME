<!-- res/drawable/blur_bg.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Màu nền mờ (ARGB) -->
            <corners android:radius="8dp" /> <!-- Độ cong các góc -->
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Màu nền trong suốt -->
        </shape>
    </item>
</layer-list>
