<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    android:padding="10dp">



    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/imgItemAvt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_bg" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="9"
                android:id="@+id/tvItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgItemEdit"
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_edit_24"/>

            <ImageView
                android:id="@+id/imgItemDelete"
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_close_24"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvItemCmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/poppins"
            android:text="Trọng Sinh xuyên qua thành thiên kim giả hào môn, Diệp Chước trở thành con gái riêng của mọi người hô đánh. Một tay thối rữa thì sao? Nhìn tôi đánh thành vua! Diệp Chước hỏa tốc nhường vị thiên kim thật, mang theo ma ma cùng cữu cữu một đêm làm giàu, gia sản trăm tỷ, tổng tài khoa học kỹ thuật, tài nữ vô song, trực tiếp đi lên đỉnh cao nhân sinh! Thuận tiện cùng đại lão tài phiệt nói chuyện yêu đương, từ nay về sau được sủng lên trời!"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvItemTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:fontFamily="@font/poppins"
            android:text="10:25 05/08/2023"
            android:textColor="@color/black"
            android:textSize="12dp"/>

    </LinearLayout>

</LinearLayout>
